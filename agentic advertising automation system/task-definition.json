{
  "family": "adops-automation",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::YOUR-ACCOUNT-ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR-ACCOUNT-ID:role/AdOpsSystemRole",
  "containerDefinitions": [
    {
      "name": "adops-container",
      "image": "YOUR-ACCOUNT-ID.dkr.ecr.us-east-1.amazonaws.com/adops-automation:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "BEDROCK_MODEL",
          "value": "anthropic.claude-3-sonnet-20240229-v1:0"
        },
        {
          "name": "S3_REPORTS_BUCKET",
          "value": "adops-reports-YOUR-ACCOUNT-ID"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/adops-automation",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}